<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sample.agilesamurai.moriagirl.MainActivity$MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mikuText"
        android:layout_width="550dp"
        android:layout_height="300dp"
        android:background="@drawable/tnm"
        android:textSize="36sp"
        android:padding="20dp"
        android:layout_margin="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mikuImage"
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:scaleType="fitStart"
            android:onClick="displayInputMessage"
            android:src="@drawable/abata"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mikuImage"
            android:text="00:00"
            android:textSize="56dp"
            android:gravity="center"
            android:layout_marginTop="120dp"/>

        <Button
            android:id="@+id/syokai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/gg"
            android:text="@string/end"
            android:textSize="46dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/mikuImage"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>
