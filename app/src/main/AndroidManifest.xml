<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sample.agilesamurai.moriagirl">

    <uses-permission android:name="android.permission.RECORD_AUDIO" android:maxSdkVersion="22" />
    <application
        android:name="com.sample.agilesamurai.moriagirl.App"
        android:allowBackup="true"
        android:icon="@drawable/ribbonkuma"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name=".views.SoundMeterActivity" />

        <activity android:name=".titleActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>